{
  "devDependencies": {
    "husky": "^8.0.0",
    "textlint": "^12.2.3",
    "textlint-plugin-html": "^0.3.0",
    "textlint-rule-no-dead-link": "^5.1.2",
    "textlint-rule-preset-japanese": "^7.0.0",
    "textlint-rule-prh": "^5.3.0"
  },
  "scripts": {
    "lint": "textlint */**.md",
    "lint:html": "cat .textlintrc_html | jq '.rules.\"no-dead-link\".baseURI=\"'${DEPLOY_PRIME_URL}'\"' > .textlintrc_html.tmp && textlint --config .textlintrc_html.tmp _site/**/*.html",
    "prepare": "husky install"
  }
}
